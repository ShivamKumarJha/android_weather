<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_size"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_day_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_regular"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_regular"
        android:textSize="@dimen/font_size_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_temp_id"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/demo_day" />

    <TextView
        android:id="@+id/tv_temp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_regular"
        android:textSize="@dimen/font_size_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/tv_day_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/demo_temperature" />

    <View
        android:id="@+id/image_divider_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_margin"
        android:layout_marginStart="@dimen/margin_regular"
        android:layout_marginLeft="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        android:background="@color/bg_success"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>